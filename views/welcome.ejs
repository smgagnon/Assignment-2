<!doctype html>
<html lang="en">
  <head>
    <%- include('partials/head'); %>
  </head>
  <body>
    <div class="container login-container">
        <div class="row">
            <div class="col-md-6 login-form-1">
            </div>
            <div class="col-md-6 login-form-2">
                <h3>Login</h3>
                <% if (message.length > 0) { %>
                    <div class="alert alert-danger col-sm-12"><%= message %></div>
                <% } %>
                <form class="container" method="POST" action="/login">
                    <div class="form-group">
                        <input type="text" class="form-control" name="user_name" placeholder="Your Username *" value="" />
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" placeholder="Your Password *" value="" />
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btnSubmit" value="Login" />
                    </div>
                    <div class="form-group">

                        <a href="#" class="ForgetPwd" value="Login">Forget Password?</a>
                    </div>
                </form>
            </div>
        </div>
        </div>
    </div>

    <%- include('partials/footer'); %>
  </body>
</html>